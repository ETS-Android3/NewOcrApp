<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/full_capsule_shape"
    app:cardCornerRadius="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/delete_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@raw/opensans_variablefont_wdth"
            android:text="Exit App?"
            android:textAlignment="center"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/delete_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@raw/opensans_variablefont_wdth"
            android:text="Are you sure you want to exit the app ?"
            android:textAlignment="center"
            android:textColor="@color/blue_light"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_alignParentStart="true"
                android:background="@drawable/full_capsule_dark"
                android:gravity="center"
                android:text="Exit"
                android:textAllCaps="false"
                android:textColor="@color/off_white" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_alignParentRight="true"
                android:background="@color/trans"
                android:gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/blue_dark" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
